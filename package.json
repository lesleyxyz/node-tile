{
  "name": "node-tile",
  "version": "1.0.2",
  "description": "Package to ring & talk to your Tile Tracker",
  "type": "module",
  "author": "Lesley De Keyser",
  "license": "ISC",
  "scripts": {
    "compile": "tsc",
    "clean": "shx rm -rf ./lib",
    "start": "npm run compile && node dist/index.js",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && shx mv lib/esm/index.js lib/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "prepack": "npm run build"
  },
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "Tile",
    "Tracker",
    "Device",
    "Bluetooth"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lesleyxyz/node-tile.git"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "bleno": "npm:@abandonware/bleno@^0.5.1-4",
    "node-googlehome": "^0.0.7",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.13",
    "shx": "^0.3.4"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  }
}
